<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#93BFCF"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/head_text"
        android:gravity="center_horizontal"
        android:textSize="50sp"
        android:textColor="#F16767"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="50dp"
        android:text="TicTacToe"
        ></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearlayoutbutton"
        android:gravity="center"
        android:layout_below="@id/head_text">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/button0"
                android:tag="0"
                android:background="#86A3B8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                tools:text="0"
                android:textSize="60sp"></Button>
            <Button
                android:id="@+id/button1"
                android:tag="1"
                android:background="#86A3B8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                tools:text="1"
                android:textSize="60sp"></Button>
            <Button
                android:id="@+id/button2"
                android:tag="2"
                android:background="#86A3B8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                tools:text="2"
                android:textSize="60sp"></Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/button3"
                android:tag="3"
                android:background="#86A3B8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                tools:text="3"
                android:textSize="60sp"></Button>
            <Button
                android:id="@+id/button4"
                android:tag="4"
                android:background="#86A3B8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                tools:text="4"
                android:textSize="60sp"></Button>
            <Button
                android:id="@+id/button5"
                android:tag="5"
                android:background="#86A3B8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                tools:text="5"
                android:textSize="60sp"></Button>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/button6"
                android:tag="6"
                android:background="#86A3B8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                tools:text="6"
                android:textSize="60sp"></Button>
            <Button
                android:id="@+id/button7"
                android:tag="7"
                android:background="#86A3B8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                tools:text="7"
                android:textSize="60sp"></Button>
            <Button
                android:id="@+id/button8"
                android:tag="8"
                android:background="#86A3B8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                tools:text="8"
                android:textSize="60sp"></Button>
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gamer_text"
        android:gravity="center_horizontal"
        android:textSize="50sp"
        android:textColor="#F16767"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="50dp"
        android:text="Player 0"
        android:layout_below="@id/linearlayoutbutton"
        ></TextView>
</RelativeLayout>